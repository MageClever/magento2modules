<?xml version="1.0" ?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
	<argument name="data" xsi:type="array">
		<item name="js_config" xsi:type="array">
			<item name="provider" xsi:type="string">mageclever_colormapping_colorrelationship_form.colorrelationship_form_data_source</item>
		</item>
		<item name="label" xsi:type="string" translate="true">General Information</item>
		<item name="template" xsi:type="string">templates/form/collapsible</item>
	</argument>
	<settings>
		<buttons>
			<button name="back" class="MageClever\ColorMapping\Block\Adminhtml\ColorRelationship\Edit\BackButton"/>
			<button name="delete" class="MageClever\ColorMapping\Block\Adminhtml\ColorRelationship\Edit\DeleteButton"/>
			<button name="save" class="MageClever\ColorMapping\Block\Adminhtml\ColorRelationship\Edit\SaveButton"/>
			<button name="save_and_continue" class="MageClever\ColorMapping\Block\Adminhtml\ColorRelationship\Edit\SaveAndContinueButton"/>
		</buttons>
		<namespace>mageclever_colormapping_colorrelationship_form</namespace>
		<dataScope>data</dataScope>
		<deps>
			<dep>mageclever_colormapping_colorrelationship_form.colorrelationship_form_data_source</dep>
		</deps>
	</settings>
	<dataSource name="colorrelationship_form_data_source">
		<argument name="data" xsi:type="array">
			<item name="js_config" xsi:type="array">
				<item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
			</item>
		</argument>
		<settings>
			<submitUrl path="*/*/save"/>
		</settings>
		<dataProvider name="colorrelationship_form_data_source" class="MageClever\ColorMapping\Model\ColorRelationship\DataProvider">
			<settings>
				<requestFieldName>colorrelationship_id</requestFieldName>
				<primaryFieldName>colorrelationship_id</primaryFieldName>
			</settings>
		</dataProvider>
	</dataSource>
	<fieldset name="general">
		<settings>
			<label>General</label>
		</settings>

        <field name="parent_color_option_id" sortOrder="10" formElement="select">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">ColorRelationship</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>int</dataType>
                <label translate="true">Parent Color</label>
                <dataScope>parent_color_option_id</dataScope>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="MageClever\ColorMapping\Ui\Component\Form\ParentColor\Options"/>
                    </settings>
                </select>
            </formElements>
        </field>
        <field name="child_color_option_id" sortOrder="20" formElement="multiselect">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">ColorRelationship</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>int</dataType>
                <label translate="true">Child Colors</label>
                <dataScope>child_color_option_id</dataScope>
            </settings>
            <formElements>
                <multiselect>
                    <settings>
                        <options class="MageClever\ColorMapping\Ui\Component\Form\ChildColor\Options"/>
                    </settings>
                </multiselect>
            </formElements>
        </field>
	</fieldset>
</form>
